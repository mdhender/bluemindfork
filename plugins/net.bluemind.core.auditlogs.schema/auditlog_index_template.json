{
   "data_stream":{
   },
   "index_patterns":[
      "audit_log*"
   ],
   "priority":500,
   "template":{
      "settings":{
         "number_of_shards":1,
		 "number_of_replicas": 0,
         "index.lifecycle.name":"logs"
      },
      "mappings":{
         "_source":{
            "enabled":true
         },
         "properties":{
            "@timestamp":{
               "type":"date",
               "format":"date_optional_time||epoch_millis"
            },
            "container":{
               "properties":{
                  "name":{
                     "type":"keyword"
                  },
                  "uid":{
                     "type":"keyword"
                  },
                  "owner":{
                     "properties":{
                        "displayName":{
                           "type":"keyword"
                        },
                        "email":{
                           "type":"keyword"
                        },
                        "entryUid":{
                           "type":"keyword"
                        },
                        "path":{
                           "type":"keyword"
                        }
                     }
                  }
               }
            },
            "item":{
               "properties":{
                  "id":{
                     "type":"keyword"
                  },
                  "uid":{
                     "type":"keyword"
                  },
                  "displayname":{
                     "type":"keyword"
                  },
                  "version":{
                     "type":"integer"
                  }
               }
            },
            "securityContext":{
               "properties":{
                  "displayName":{
                     "type":"keyword"
                  },
                  "email":{
                     "type":"keyword"
                  },
                  "origin":{
                     "type":"keyword"
                  },
                  "uid":{
                     "type":"keyword"
                  }				   
               }
            },
            "action":{
               "type":"keyword"
            },
            "origin":{
               "type":"keyword"
            },
            "content":{
               "properties":{
                  "key":{
                     "type":"text"
                  },
                  "with":{
                     "type":"keyword"
                  },
                  "description":{
                     "type":"text"
                  },
                  "author":{
                     "type":"keyword"
                  }
               }
            },
            "updatemessage":{
               "type":"keyword"
            },
            "logtype":{
               "type":"keyword"
            }
         }
      }
   }
}