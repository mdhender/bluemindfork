{
    "plugins": ["vue"],
    "env": {
        "browser": true,
        "es6": true,
        "jest": true,
	"node": true
    },
    "extends": ["eslint:recommended", "plugin:vue/recommended"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "rules": {
        "max-len": [
            "error",
            {
                "code": 120
            }
        ],
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": ["error", "unix"],
        "semi": ["error", "always"],
        "no-console": ["warn"],
        "vue/max-attributes-per-line": [
            "warn",
            {
                "singleline": 5,
                "multiline": {
                    "max": 1,
                    "allowFirstLine": false
                }
            }
        ],
        "vue/html-indent": [
            "error",
            4,
            {
                "attribute": 1,
                "closeBracket": 0,
                "alignAttributesVertically": true,
                "ignores": []
            }
        ],
        "vue/singleline-html-element-content-newline": "off"
    }
}
