<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:with type="net.bluemind.ui.im.client.IMConstants" field="msg" />

	<ui:style>
		.label {
			display: inline;
			padding-right: 4px;
		}
	</ui:style>

	<g:DockLayoutPanel unit="PX" styleName="modalPanel"
		height="150px">

		<g:north size="40">
			<g:Label ui:field="text" styleName="modalHeader" text="{msg.sendHistory}" />
		</g:north>

		<g:center>
			<g:FlowPanel styleName="modalContent">
				<g:FlowPanel ui:field="form" />
			</g:FlowPanel>
		</g:center>

		<g:south size="40">
			<g:FlowPanel styleName="modalButton">
				<g:Button ui:field="send" styleName="button primary" text="{msg.sendButton}" />
				<g:Button ui:field="cancel" styleName="button" text="{msg.cancelButton}" />
			</g:FlowPanel>
		</g:south>

	</g:DockLayoutPanel>

</ui:UiBinder>
