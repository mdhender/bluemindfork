<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:bj="urn:import:net.bluemind.ui.admin.client" xmlns:f="urn:import:net.bluemind.ui.adminconsole.base.ui"
	xmlns:common="urn:import:net.bluemind.ui.common.client.forms"
	xmlns:ou="urn:import:net.bluemind.ui.adminconsole.directory.ou"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateLocales='default' ui:useSafeHtmlTemplates='true'
	xmlns:d="urn:import:net.bluemind.ui.adminconsole.directory">


	<ui:style>
	.logo {
		vertical-align: middle;
	}
	
	.topRight {
		position: absolute;
		top: 10px;
		right: 10px;
	}
	</ui:style>

	<ui:with field="ou"
		type="net.bluemind.ui.adminconsole.directory.ou.l10n.OrgUnitConstants" />

	<g:FlowPanel>
		<g:Label ui:field="errorLabel" styleName="modal-dialog-error" />
		
		<g:Label text="{ou.name}" />
		<g:TextBox ui:field="name" />

		<g:Label text="{ou.parent}" />
		<ou:OUEdit ui:field="parent" kind="ORG_UNIT" />

	</g:FlowPanel>

</ui:UiBinder>