<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:bj="urn:import:net.bluemind.ui.admin.client" ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateLocales='default' ui:useSafeHtmlTemplates='true'
	xmlns:mc="urn:import:net.bluemind.ui.adminconsole.monitoring.widgets"
	xmlns:f="urn:import:net.bluemind.ui.adminconsole.base.ui" xmlns:common="urn:import:net.bluemind.ui.common.client.forms">

     <ui:style>
		.title {
			font-weight: bold;
		}

		.anchor:hover {
			cursor: pointer;
		}

	</ui:style>
    
	<ui:with field="c"
		type="net.bluemind.ui.adminconsole.monitoring.l10n.MonitoringMenuConstants" />

		<g:DockLayoutPanel unit="PX">
	    	<g:north size="50">
	    	    <g:VerticalPanel>
	    	        <g:Anchor ui:field="globalStatusButton" styleName="{style.anchor}">Retourner à la liste des informations</g:Anchor>
					<g:VerticalPanel>
						<g:Label styleName="{style.title}">Date et heure de vérification du service : </g:Label>
           				<g:Label ui:field="execDateLabel">Heure d'exécution</g:Label>
            		</g:VerticalPanel>
	    		</g:VerticalPanel>
    	    </g:north>
    	    
	    	<g:center>
		    	<mc:ServiceInformationWidget ui:field="infoWidget"/>
	    	</g:center>
	    	
		</g:DockLayoutPanel>
</ui:UiBinder>