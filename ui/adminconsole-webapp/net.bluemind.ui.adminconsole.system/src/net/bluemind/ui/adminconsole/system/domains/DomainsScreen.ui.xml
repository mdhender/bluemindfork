<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:bj="urn:import:net.bluemind.ui.admin.client" ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateLocales='default' ui:useSafeHtmlTemplates='true'
	xmlns:f="urn:import:net.bluemind.ui.adminconsole.base.ui" xmlns:j="urn:import:net.bluemind.ui.adminconsole.system.domains"
	xmlns:common="urn:import:net.bluemind.ui.common.client.forms">
	
	<ui:with field="c"
		type="net.bluemind.ui.adminconsole.system.hosts.l10n.HostConstants" />

	<ui:style>
	.filtersContainer {
		float: right;
	}
	
	.delete {
		height: 25px;
		vertical-align: top;
		padding: 3px 14px 5px;
		font-size: small;
		border: 1px solid #660404;
		color: #FFFFFF;
		background-color: #C43C35;
		text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);
		border-color: rgba(196, 60, 53, 0.1) rgba(196, 60, 53, 0.1)
			rgba(136, 42, 37, 0.25);
		background-image: -moz-linear-gradient(top, #EE5F5B, #C43C35);
		background-image: -ms-linear-gradient(top, #EE5F5B, #C43C35);
		background-image: -webkit-linear-gradient(top, #EE5F5B, #C43C35);
		background-image: -o-linear-gradient(top, #EE5F5B, #C43C35);
		background-image: linear-gradient(top, #EE5F5B, #C43C35);
	}
	
	.delete[disabled] {
		background-color: #a41818;
		border: 1px solid #660404;
	}
	
	.crap {
		display: inline-block;
	}
	
	.newButton {
		height: 25px;
	}
	</ui:style>

	<ui:with field="jt"
		type="net.bluemind.ui.adminconsole.system.hosts.l10n.HostConstants" />

	<g:DockLayoutPanel unit='PX'>

		<g:north size="30">

			<g:FlowPanel>
				<g:FlowPanel>
					<g:Button ui:field="newButton" styleName="primary {style.newButton}" text="{c.newButton}"/> 
					<g:Button ui:field="deleteButton" enabled="false"
						styleName="button {style.delete}" text="{c.delete}" />
				</g:FlowPanel>
			</g:FlowPanel>

		</g:north>

		<g:center>
			<j:DomainsGrid ui:field="grid" />
		</g:center>

	</g:DockLayoutPanel>



</ui:UiBinder>
