        "test": "jest --watch --config node_modules/@bluemind/conf/jest.config.js",
        "root": "(cd root-webapp/net.bluemind.webapp.root.js && yarn dev)",
        "mail": "(cd mail-webapp/net.bluemind.webapp.mail.js && yarn dev)",
