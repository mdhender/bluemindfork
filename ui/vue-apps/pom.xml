<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <artifactId>net.bluemind.vue-apps</artifactId>
    <version>4.1.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<modelVersion>4.0.0</modelVersion>
	
	<parent>
		<groupId>net.bluemind</groupId>
		<artifactId>net.bluemind.global</artifactId>
		<version>4.1.0-SNAPSHOT</version>
		<relativePath>../../global/pom.xml</relativePath>
	</parent>

	<properties>
        <!-- Set this build number to the last locked webmail build. It is used by CI "bm-vue-apps" when param BM_VERSION is not supplied. -->
		<bm-runtime.url>https://forge.bluemind.net/staging/p2/bluemind/4.1.50201/</bm-runtime.url>
	</properties>

	<repositories>
		<repository>
			<id>bluemind</id>
			<layout>p2</layout>
			<url>${bm-runtime.url}</url>
		</repository>
	</repositories>

    <modules>
	  <module>mail-webapp</module>
	  <module>packaging</module>
      <module>root-webapp</module>
      <module>webmodules</module>
	</modules>


    <build>
        <pluginManagement>
			<plugins>
                <plugin>
                    <groupId>com.github.eirslett</groupId>
                    <artifactId>frontend-maven-plugin</artifactId>
                    <version>1.6</version>

                    <configuration>
                        <nodeDownloadRoot>https://forge.bluemind.net/nexus/repository/releases/bluemind-dependencies/node/</nodeDownloadRoot>
                        <yarnDownloadRoot>https://forge.bluemind.net/nexus/repository/releases/bluemind-dependencies/yarn/</yarnDownloadRoot>
                    </configuration>
                    
                    <executions>
                        <execution>
                            <id>Install JS build tools</id>
                            <goals>
                                <goal>install-node-and-yarn</goal>
                            </goals>
                            <configuration>
                                <nodeVersion>v10.18.1</nodeVersion>
                                <yarnVersion>v1.6.0</yarnVersion>
                            </configuration>
                        </execution>
                        <execution>
                            <id>Install JS dependencies</id>
                            <goals>
                                <goal>yarn</goal>
                            </goals>
                        </execution>
                        <execution>
                            <id>Build JS resources</id>
                            <goals>
                                <goal>yarn</goal>
                            </goals>
                            <phase>generate-resources</phase>
                            <configuration>
                                <arguments>run build</arguments>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
</project>
