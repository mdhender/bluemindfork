{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "name": "vscode-jest-tests",
            "request": "launch",
            "args": ["--runInBand", "--config", "node_modules/@bluemind/conf/jest.config.js"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "disableOptimisticBPs": true,
            "program": "${workspaceFolder}/node_modules/jest/bin/jest"
        },
        {
            "name": "vuejs: chrome",
            "runtimeExecutable": "/usr/bin/chromium",
            "request": "launch",
            "type": "pwa-chrome",
            "url": "http://localhost:8080/webapp/mail",
            "sourceMapPathOverrides": {
                "webpack://@bluemind/webapp.mail/*": "${workspaceFolder}/mail-webapp/net.bluemind.webapp.mail.js/*"
            }
        },
        {
            "name": "vuejs: firefox",
            "type": "firefox",
            "request": "attach",
            "url": "http://localhost:8080/webapp/mail",
            "webRoot": "${workspaceFolder}/src",
            "pathMappings": [
                {
                    "url": "webpack://bluemind/webapp.mail",
                    "path": "${workspaceFolder}/mail-webapp"
                }
            ]
        }
    ]
}
