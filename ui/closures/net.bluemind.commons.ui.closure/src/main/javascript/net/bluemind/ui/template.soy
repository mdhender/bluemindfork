/**
 * draw banner entries
 * @param count pending actions count
 * @param title pending actions count
 */
{template .pendingActions}
<span title="{$title}" class='unread-mails {if $count != 0 and $count != '~' }unread-mails-bg-present{else}unread-mails-bg-empty{/if}'>{$count}</span>
{/template}
