/**
 * Standard field decorator
 */
{template .field}
    <span class="{css field-base-label}"></span>
    <div class="{css field-base-field}"></div>
{/template}

/**
 * 
 */
{template .photo}
	<img src="images/nopicture.png" alt="Photo" />
{/template}

/**
 * form notification
 * @param css css name
 * @param msg
 */
{template .formNotification}
  <div class="{$css}">{$msg}</div>
{/template}


/**
 * form notification
 */
{template .notification}
  <div>
    <span id="bm-ui-form-notification-popup-btn" class="{css form-notification-btn}"></span>
    <div id="bm-ui-form-notification" class="{css form-notification}"></div>
  </div>
  <div id="bm-ui-form-notification-popup" class="{css popup}"></div>
{/template}
