/**
 * A bullet !
 * @param label
 * @param color
 */
{template .bullet}
	<li title="{$label}">
	<span  style="background-color: #{$color};" ></span>
	{$label}
	<span class="{css fa} {css fa-close}" ></span>
	</li>
{/template}
