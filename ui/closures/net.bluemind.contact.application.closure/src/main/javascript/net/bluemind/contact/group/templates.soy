/**
 * Member data
 * @param member Entry data.
 */
{template .member}
  <table>
    <tr>
      <td  class='{css member-goto}' style='width:30px'>
      </td>
      <td style='width:20px;'>
      </td>
      <td>{$member.name}</td>
     <td>
     {if $member.email}
       <a href='mailto:{$member.email}'>{$member.email}</a>
     {/if}
     </td>
    </tr>
  </table>
{/template}


/**
 * picture 
 */
{template .picture}
	<i class="fa fa-lg fa-user"></i>  
{/template}