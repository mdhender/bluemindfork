/**
 * picture 
 */
{template .picture}
	<img class="{css picture}" src="images/nopicture_small.png" />  
{/template}

/**
 * Entry item
 * @param entry Entry data.
 */
{template .ac}
	{if $entry.photo}
  	  <img src="{$entry.photo}" alt="" />
	  {else}
	  {if $entry.kind == 'group'}
	  <i class="fa fa-lg fa-users"></i>
	  {else}
	  <i class="fa fa-lg fa-user"></i>
	  {/if}
    {/if}
  	<h2>{$entry.name}</h2>
  	<h2>{$entry.containerName}</h2>
	{if $entry.email}
		<span>{$entry.email}</span>
	{/if}
{/template}

/**
 * Entry item
 * @param name Entry name
 */
{template .create}
	{msg meaning="contact.msg.contact.create" desc="Create a new contact"}Create new member '{$name}'...{/msg}
{/template}
