/**
 * List task item label
 * @param task
 */
{template .label}
  <h2 title="{$task.label}">{$task.label}</h2>
  {if $task.date}
    <div class="{css date}">{$task.date}</div>
  {/if}
  {call .tags}
  	{param tags : $task.tags /}
  {/call}
{/template}

/**
 * List task item tags pill
 * @param tags
 */
{template .tags}
  {if length($tags) == 1}
    <div class="{css tag}" title="{$tags[0].label}" style="float:left; background-color: #{$tags[0].color};"></div>  
  {elseif $tags and length($tags) > 1}
    <div class="{css tag} {css multi}" title="
      {foreach $tag in $tags}
        {$tag.label}
        {if not isLast($tag)} ,{sp} {/if}
      {/foreach}
    " style="float:left; border-left-color: #{$tags[0].color}; border-right-color: #{$tags[1].color};"></div>
  {/if}
{/template}

/**
 * Import form dialog
 */
{template .dialogImport}
  <form  enctype="multipart/form-data" method="post" action="contact/bmc">
    <input type='file' name='vcs'/>
  </form>
{/template}

/**
 * vtodo Import in progress dialog
 */
{template .progressImport}
  <div class={css status}></div>
  <div class="{css progress} {css striped} {css active}">
    <div class="{css bar}"></div>
  <div>
{/template}

