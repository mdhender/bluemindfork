/**
 * Entry item
 * @param entry Entry data.
 */
{template .main}
  {call .picture} 
    {param info: $entry['photo'] /} 
  {/call}
  <h2>{$entry['name']}</h2>
  {call .phone} {param info: $entry['phone'] /} {/call}
{/template}


/**
 * Entry picture 
 * @param info Picture Id or URL
 */
{template .picture}
  {if $info}
    <img class="{css picture}" src="/contact/contact/fetchDocument?id={$info}">
  {else}
    <img class="{css picture}" src="data:image/png;base64," />  
  {/if}
{/template}

/**
 * A textual information
 * @param info Information content
 */
{template .phone}
  {if $info}
    <span>{$info}</span>
  {/if}
{/template}
