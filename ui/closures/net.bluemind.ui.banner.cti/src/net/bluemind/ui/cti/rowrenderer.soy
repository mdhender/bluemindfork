/**
 * Entry item
 * @param entry Entry data.
 */
{template .main}
  <img class="{css picture}" src="{$entry['photo']}">
  <h2>{$entry['name']}</h2>
  {call .phone} {param info: $entry['phone'] /} {/call}
{/template}



/**
 * A textual information
 * @param info Information content
 */
{template .phone}
  {if $info}
    <span>{$info}</span>
  {/if}
{/template}
