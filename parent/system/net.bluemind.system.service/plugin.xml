   <extension
         point="net.bluemind.lib.vertx.verticles">
      <verticle
            impl="net.bluemind.system.service.internal.SharedSystemConfigurationVerticle$Init">
      </verticle>
   </extension>
   <extension
         point="net.bluemind.system.hook">
      <validator
            class="net.bluemind.system.service.internal.SubscriptionContactsValidator">
