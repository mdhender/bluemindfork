      <endpoint
            api="net.bluemind.system.api.IDomainTemplate">
      </endpoint>
      <endpoint
            api="net.bluemind.system.api.ISystemConfiguration">
      </endpoint>
      <endpoint
            api="net.bluemind.system.api.IMailDeliveryMgmt">
      </endpoint>
      <endpoint
            api="net.bluemind.system.api.ISecurityMgmt">
      </endpoint>
      <endpoint
            api="net.bluemind.system.api.IGlobalSettings">
      </endpoint>
      <endpoint
            api="net.bluemind.system.api.IExternalSystem">
      </endpoint>
