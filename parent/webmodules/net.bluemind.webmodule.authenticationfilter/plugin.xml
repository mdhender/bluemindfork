<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="net.bluemind.webmodule.server">
      <web-filter
            class="net.bluemind.webmodule.authenticationfilter.AuthenticationFilter">
      </web-filter>
   </extension>
   <extension
         point="net.bluemind.webmodule">
      <web-module
            root="/auth">
         <handler
               class="net.bluemind.webmodule.authenticationfilter.OpenIdHandler"
               path="openid">
         </handler>
         <handler
               class="net.bluemind.webmodule.authenticationfilter.FormHandler"
               path="form">
         </handler>
         <handler
               class="net.bluemind.webmodule.authenticationfilter.CasHandler"
               path="cas">
         </handler>
         <handler
               class="net.bluemind.webmodule.authenticationfilter.SudoHandler"
               path="sudo">
         </handler>
      </web-module>
   </extension>
   <extension
         point="net.bluemind.hornetq.forwardToVertx">
      <vertx-forwarder
            class="net.bluemind.webmodule.authenticationfilter.ForwardSessionMessages">
      </vertx-forwarder>
   </extension>

</plugin>
