<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="net.bluemind.core.rest.serviceFactory">
      <serviceFactory
            class="net.bluemind.forest.cloud.service.ForestJoinService$FJoinServiceFactory"></serviceFactory>
   </extension>
   <extension
         point="net.bluemind.kafka.configuration.topics">
      <topic
            name="joining.instances"
            partitions="5"
            replicas="2">
      </topic>
      <topic
            name="joined.instances"
            partitions="5"
            replicas="2">
      </topic>
   </extension>
   <extension
         point="net.bluemind.lib.vertx.verticles">
      <verticle
            impl="net.bluemind.forest.cloud.service.JoiningInstancesProcessor$VertxFacto">
      </verticle>
   </extension>
   <extension
         point="net.bluemind.core.rest.apiEndpoint">
      <endpoint
            api="net.bluemind.forest.cloud.api.IForestJoin"
            inline="false">
      </endpoint>
   </extension>
</plugin>
