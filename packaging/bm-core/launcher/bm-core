appid=net.bluemind.application.launcher.coreLauncher

product=`basename $0`
curdir=`dirname $0`
pidfile=$1

export BM_JVM_CUSTOM_OPTS="-Djdk.nio.maxCachedBufferSize=262144"
export DEFAULT_MEM=128
source ${curdir}/equinox-systemd.lib ${product} ${pidfile}

bm_equinox_run_server_appid ${curdir} ${appid}
