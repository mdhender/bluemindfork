rm -rf /var/lib/bm-lmtpd/org.*

# Force startup link install
update-rc.d -f bm-lmtpd remove > /dev/null 2>&1

rm -f /usr/share/bm-lmtpd/configuration/org.eclipse.equinox.simpleconfigurator/bundles.info.installed
rm -rf /usr/share/bm-lmtpd/dropins
mkdir -p /usr/share/bm-lmtpd/dropins

# Needed for wheezy support
if [ ! -x "/usr/bin/deb-systemd-helper" ]; then
deb-systemd-helper() {
    echo "Systemd disabled, manage systemv only!"
}
fi

#DEBHELPER#

exit 0

