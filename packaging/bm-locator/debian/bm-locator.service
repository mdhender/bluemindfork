[Unit]
Description=BlueMind locator Server
ConditionPathExists=!/etc/bm/bm-locator.disabled
After=bm-node.service postgresql.service
PartOf=bluemind.target

[Service]
Type=notify
WorkingDirectory=/var/log
TimeoutStartSec=90s
GuessMainPID=no
RemainAfterExit=no
SuccessExitStatus=129 143
Environment=JAVA_HOME=/usr/lib/jvm/bm-jdk
ExecStart=/usr/share/bm-locator/bm-locator /var/run/bm-locator.pid

[Install]
WantedBy=bluemind.target
