set -e
#set -x

if [ -e /etc/ldap/sasl2/sasl2.slapd.conf ]; then
    rm -f /etc/ldap/sasl2/sasl2.slapd.conf
fi

echo -n "Add user openldap to sasl group... "
usermod -a -G sasl openldap
echo "done"

exit 0
