<?xml version="1.0" encoding="UTF-8"?>

<configuration>
	<property name="DEFAULT_PATTERN"
		value="%date{ISO8601, ${net.bluemind.property.system.timezone:-GMT}} [%thread] %c{1} %p - %m%n" />

	<appender name="R"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<!--See also http://logback.qos.ch/manual/appenders.html#RollingFileAppender -->
		<File>/var/log/bm-xivobridge/xivobridge.log</File>
		<encoder>
			<pattern>${DEFAULT_PATTERN}</pattern>
		</encoder>
		<rollingPolicy
			class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<!-- daily rollover -->
			<FileNamePattern>/var/log/bm/core.log.%d{yyyy-MM-dd}.%i.gz</FileNamePattern>
			<maxHistory>20</maxHistory>
			<MaxFileSize>60MB</MaxFileSize>
			<totalSizeCap>1GB</totalSizeCap>
		</rollingPolicy>
	</appender>

	<logger name="org.apache.directory.shared" level="ERROR" />
	<root level="INFO">
		<appender-ref ref="R"/>
	</root>
</configuration>
